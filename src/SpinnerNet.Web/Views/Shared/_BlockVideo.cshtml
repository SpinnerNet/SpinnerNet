@model SpinnerNet.Web.Models.BlockVideoDto
@{
  var d = Model.Layout.Desktop;
  string colEnd = (d.ColSpan == int.MinValue) ? "-1" : (d.Col + d.ColSpan).ToString();
  string rowEnd = (d.RowSpan == int.MinValue) ? "-1" : (d.Row + d.RowSpan).ToString();
  
  var videoAttrs = new Dictionary<string, string>();
  if (Model.Autoplay) videoAttrs["autoplay"] = "";
  if (Model.Loop) videoAttrs["loop"] = "";
  if (Model.Muted) videoAttrs["muted"] = "";
}
<section class="block"
         style="--col-start:@d.Col; --col-end:@colEnd; --row-start:@d.Row; --row-end:@rowEnd; --bg:@d.Bg;">
  <video class="block-video"
         style="width: 100%; height: 100%; object-fit: cover; display: block;"
         @(Model.Autoplay ? "autoplay" : "")
         @(Model.Loop ? "loop" : "")
         @(Model.Muted ? "muted" : "")
         playsinline>
    <source src="@Model.VideoUrl" type="video/mp4">
    Your browser does not support the video tag.
  </video>
</section>