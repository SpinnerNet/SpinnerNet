@page
@model SpinnerNet.Web.Pages.SpinnenModel
@{
    Layout = "Shared/_Layout";
}

<!-- Hero Section - Spinnen -->
<section class="hero">
    <div class="container">
        <div class="hero-content">
            <h1>@Model.GetText("Spinnen_Hero_Title")</h1>
            <p class="lead">@Model.GetText("Spinnen_Hero_Subtitle")</p>
            <p class="lead">@Model.GetText("Spinnen_Hero_Description")</p>
            
            <div class="hero-actions">
                <a href="#projekte" class="btn btn-secondary btn-lg">@Model.GetText("Spinnen_Hero_Projects")</a>
                <a href="#bildung" class="btn btn-outline btn-lg">@Model.GetText("Spinnen_Hero_Education")</a>
                <a href="/contact" class="btn btn-primary btn-lg">@Model.GetText("Spinnen_Hero_Contact")</a>
            </div>
        </div>
    </div>
</section>

<!-- Creative Space Section -->
<section class="section-sm" style="background-color: var(--color-gray-50);">
    <div class="container">
        <div class="section-header">
            <h2>@Model.GetText("Spinnen_Space_Title")</h2>
            <p class="lead">@Model.GetText("Spinnen_Space_Description")</p>
        </div>
        
        <div class="row">
            <div class="col-4">
                <h3>@Model.GetText("Spinnen_Space_Room_Title")</h3>
                <p>@Model.GetText("Spinnen_Space_Room_Description")</p>
            </div>
            <div class="col-4">
                <h3>@Model.GetText("Spinnen_Space_Material_Title")</h3>
                <p>@Model.GetText("Spinnen_Space_Material_Description")</p>
            </div>
            <div class="col-4">
                <h3>@Model.GetText("Spinnen_Space_Network_Title")</h3>
                <p>@Model.GetText("Spinnen_Space_Network_Description")</p>
            </div>
        </div>
    </div>
</section>

<!-- Education & Future Section -->
<section class="section" id="bildung">
    <div class="container">
        <div class="section-header">
            <h2>@Model.GetText("Spinnen_Education_Title")</h2>
            <p class="lead">@Model.GetText("Spinnen_Education_Description")</p>
        </div>
        
        <div class="row">
            <div class="col-6">
                <div class="card">
                    <div class="card-body">
                        <h3>@Model.GetText("Spinnen_Education_Holistic_Title")</h3>
                        <p>@Model.GetText("Spinnen_Education_Holistic_Description")</p>
                        
                        <h4>@Model.GetText("Spinnen_Education_Holistic_Formats")</h4>
                        <ul>
                            <li>@Model.GetText("Spinnen_Education_Holistic_Format1")</li>
                            <li>@Model.GetText("Spinnen_Education_Holistic_Format2")</li>
                            <li>@Model.GetText("Spinnen_Education_Holistic_Format3")</li>
                            <li>@Model.GetText("Spinnen_Education_Holistic_Format4")</li>
                        </ul>
                    </div>
                </div>
            </div>
            
            <div class="col-6">
                <div class="card">
                    <div class="card-body">
                        <h3>@Model.GetText("Spinnen_Education_Future_Title")</h3>
                        <p>@Model.GetText("Spinnen_Education_Future_Description")</p>
                        
                        <h4>@Model.GetText("Spinnen_Education_Future_Areas")</h4>
                        <ul>
                            <li>@Model.GetText("Spinnen_Education_Future_Area1")</li>
                            <li>@Model.GetText("Spinnen_Education_Future_Area2")</li>
                            <li>@Model.GetText("Spinnen_Education_Future_Area3")</li>
                            <li>@Model.GetText("Spinnen_Education_Future_Area4")</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Example Projects Section -->
<section class="section" id="projekte" style="background-color: var(--color-gray-50);">
    <div class="container">
        <div class="section-header">
            <h2>@Model.GetText("Spinnen_Projects_Title")</h2>
            <p class="lead">@Model.GetText("Spinnen_Projects_Description")</p>
        </div>
        
        <div class="row">
            <div class="col-4">
                <div class="card">
                    <div class="card-img card-img-placeholder" style="background: linear-gradient(135deg, var(--color-alt-primary) 0%, #8b5cf6 100%);">
                        <div style="text-align: center; line-height: 1.4; color: white;">
                            <strong>MENTAL HEALTH</strong><br>
                            Seelisches Wohlbefinden
                        </div>
                    </div>
                    <div class="card-body">
                        <h3 class="card-title">Mental Health Formate</h3>
                        <p class="card-text">Gesprächskreise, Retreats und kreative Verarbeitung für seelisches Wachstum und emotionale Stärke.</p>
                    </div>
                </div>
            </div>
            
            <div class="col-4">
                <div class="card">
                    <div class="card-img card-img-placeholder" style="background: linear-gradient(135deg, var(--color-alt-primary) 0%, #8b5cf6 100%);">
                        <div style="text-align: center; line-height: 1.4; color: white;">
                            <strong>MEDIENPROJEKTE</strong><br>
                            Digitale Kompetenzen
                        </div>
                    </div>
                    <div class="card-body">
                        <h3 class="card-title">Medienprojekte für Jugendliche</h3>
                        <p class="card-text">Kamera, Ton, Schnitt und Storytelling als Zugang zu Selbstwirksamkeit und kreativer Ausdruckskraft.</p>
                    </div>
                </div>
            </div>
            
            <div class="col-4">
                <div class="card">
                    <div class="card-img card-img-placeholder" style="background: linear-gradient(135deg, var(--color-alt-primary) 0%, #8b5cf6 100%);">
                        <div style="text-align: center; line-height: 1.4; color: white;">
                            <strong>KÜNSTLERISCHE MINI-RESIDENZEN</strong><br>
                            Kreative Freiräume
                        </div>
                    </div>
                    <div class="card-body">
                        <h3 class="card-title">Künstlerische Mini-Residenzen</h3>
                        <p class="card-text">Räume und Zeit für freie Kunst, Musik und Literatur – ohne kommerzielle Zwänge, mit voller kreativer Freiheit.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="section" style="background: linear-gradient(135deg, var(--color-primary) 0%, #8b5cf6 100%); color: white;">
    <div class="container">
        <div class="row">
            <div class="col-8">
                <h2 style="color: white; margin-bottom: var(--space-24);">@Model.GetText("Spinnen_CTA_Title")</h2>
                <p class="lead" style="color: rgba(255,255,255,0.9); margin-bottom: var(--space-32);">
                    @Model.GetText("Spinnen_CTA_Description")
                </p>
                <div style="display: flex; gap: var(--space-16); flex-wrap: wrap;">
                    <a href="/contact" class="btn btn-secondary btn-lg">@Model.GetText("Spinnen_CTA_Contact")</a>
                    <a href="/vermitteln" class="btn btn-outline btn-lg" style="border-color: white; color: white;">@Model.GetText("Spinnen_CTA_Learn")</a>
                </div>
            </div>
            <div class="col-4">
                <div style="text-align: center;">
                    <div class="card-img card-img-placeholder" style="background-color: rgba(255,255,255,0.1); border: 2px dashed rgba(255,255,255,0.3); height: 280px;">
                        <div style="color: rgba(255,255,255,0.8); text-align: center; line-height: 1.4;">
                            <strong>@Model.GetText("Spinnen_CTA_Placeholder_Title")</strong><br>
                            @Model.GetText("Spinnen_CTA_Placeholder_Description")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>