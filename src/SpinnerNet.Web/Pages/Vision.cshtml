                <a href="#bge" class="btn btn-secondary btn-lg">@Model.GetText("Vision_Hero_BGE")</a>
                <a href="#principle" class="btn btn-outline btn-lg">@Model.GetText("Vision_Hero_Principle")</a>
                <a href="/contact" class="btn btn-primary btn-lg">@Model.GetText("Vision_Hero_Contact")</a>
            </div>
        </div>
    </div>
</section>

