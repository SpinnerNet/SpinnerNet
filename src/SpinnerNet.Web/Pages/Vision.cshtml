<!-- Hero Section - Vision -->
<section class="hero">
    <div class="container">
        <div class="hero-content">
            <h1>@Model.GetText("Vision_Hero_Title")</h1>
            <p class="lead">@Model.GetText("Vision_Hero_Description")</p>
            
