@page
@model SpinnerNet.Web.Pages.ImpressumModel
@inject SpinnerNet.Shared.Localization.ILocalizationService LocalizationService
@{
    ViewData["Title"] = LocalizationService.GetString("Impressum_Title");
    ViewData["Description"] = LocalizationService.GetString("Impressum_Subtitle");
    Layout = "Shared/_Layout";
}

<!-- Hero Section with Blue Theme -->
<section class="hero" style="padding: var(--space-64) 0; background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%);">
    <div class="container">
        <div class="hero-content">
            <h1 style="color: white;">@LocalizationService.GetString("Impressum_Title")</h1>
            <p class="lead" style="color: rgba(255, 255, 255, 0.9);">@LocalizationService.GetString("Impressum_Subtitle")</p>
        </div>
    </div>
</section>

<!-- Impressum Content -->
<section class="section">
    <div class="container">
        <div class="row">
            <div class="col-8" style="margin: 0 auto;">
                <div style="background: white; padding: var(--space-40); border-radius: var(--radius-lg); box-shadow: var(--shadow-md);">
                    
                    <!-- Verantwortlich für den Inhalt -->
                    <div style="margin-bottom: var(--space-40);">
                        <h2 style="color: #1e40af; margin-bottom: var(--space-24);">@LocalizationService.GetString("Impressum_ResponsibleContent")</h2>
                        <div style="background: #f8fafc; padding: var(--space-24); border-radius: var(--radius-md); border-left: 4px solid #3b82f6;">
                            <p style="margin-bottom: var(--space-12); font-weight: var(--font-weight-semibold);">Peter Paul Clinton</p>
                            <p style="margin-bottom: var(--space-8);">Bamberger Spinnerei</p>
                            <p style="margin-bottom: var(--space-8);">Lichtenfelser Straße 17</p>
                            <p style="margin-bottom: var(--space-8);">96052 Bamberg</p>
                            <p style="margin-bottom: var(--space-8);">Deutschland</p>
                        </div>
                    </div>

                    <!-- Kontakt -->
                    <div style="margin-bottom: var(--space-40);">
                        <h2 style="color: #1e40af; margin-bottom: var(--space-24);">@LocalizationService.GetString("Impressum_Contact")</h2>
                        <div style="background: #f8fafc; padding: var(--space-24); border-radius: var(--radius-md); border-left: 4px solid #3b82f6;">
                            <p style="margin-bottom: var(--space-12);"><strong>E-Mail:</strong> <a href="mailto:info@bamberger-spinnerei.org" style="color: #3b82f6;">info@bamberger-spinnerei.org</a></p>
                            <p style="margin-bottom: var(--space-12);"><strong>Telefon:</strong> +49 (0) 951 / 123 456 789</p>
                            <p><strong>Web:</strong> <a href="https://bamberger-spinnerei.org" style="color: #3b82f6;">www.bamberger-spinnerei.org</a></p>
                        </div>
                    </div>

                    <!-- Technische Umsetzung -->
                    <div style="margin-bottom: var(--space-40);">
                        <h2 style="color: #1e40af; margin-bottom: var(--space-24);">@LocalizationService.GetString("Impressum_TechnicalImplementation")</h2>
                        <div style="background: #f8fafc; padding: var(--space-24); border-radius: var(--radius-md); border-left: 4px solid #3b82f6;">
                            <p style="margin-bottom: var(--space-12);">@LocalizationService.GetString("Impressum_TechnicalDescription")</p>
                            <p style="margin-bottom: var(--space-8);"><strong>@LocalizationService.GetString("Impressum_PoweredBy")</strong> Spinner.Net</p>
                            <p><strong>@LocalizationService.GetString("Impressum_Framework")</strong> ASP.NET Core mit Blazor</p>
                        </div>
                    </div>

                    <!-- Haftungsausschluss -->
                    <div style="margin-bottom: var(--space-40);">
                        <h2 style="color: #1e40af; margin-bottom: var(--space-24);">@LocalizationService.GetString("Impressum_Disclaimer")</h2>
                        <div style="background: #f8fafc; padding: var(--space-24); border-radius: var(--radius-md); border-left: 4px solid #3b82f6;">
                            <h3 style="color: #1e40af; margin-bottom: var(--space-16);">@LocalizationService.GetString("Impressum_ContentLiability")</h3>
                            <p style="margin-bottom: var(--space-16);">@LocalizationService.GetString("Impressum_ContentLiabilityText")</p>
                            
                            <h3 style="color: #1e40af; margin-bottom: var(--space-16);">@LocalizationService.GetString("Impressum_LinkLiability")</h3>
                            <p style="margin-bottom: var(--space-16);">@LocalizationService.GetString("Impressum_LinkLiabilityText")</p>
                            
                            <h3 style="color: #1e40af; margin-bottom: var(--space-16);">@LocalizationService.GetString("Impressum_Copyright")</h3>
                            <p>@LocalizationService.GetString("Impressum_CopyrightText")</p>
                        </div>
                    </div>

                    <!-- Online-Streitschlichtung -->
                    <div style="margin-bottom: var(--space-40);">
                        <h2 style="color: #1e40af; margin-bottom: var(--space-24);">@LocalizationService.GetString("Impressum_OnlineDispute")</h2>
                        <div style="background: #f8fafc; padding: var(--space-24); border-radius: var(--radius-md); border-left: 4px solid #3b82f6;">
                            <p style="margin-bottom: var(--space-16);">@LocalizationService.GetString("Impressum_OnlineDisputeText1")</p>
                            <p style="margin-bottom: var(--space-16);"><a href="https://ec.europa.eu/consumers/odr/" target="_blank" style="color: #3b82f6;">https://ec.europa.eu/consumers/odr/</a></p>
                            <p>@LocalizationService.GetString("Impressum_OnlineDisputeText2")</p>
                        </div>
                    </div>

                    <!-- Community Grundsätze -->
                    <div>
                        <h2 style="color: #1e40af; margin-bottom: var(--space-24);">@LocalizationService.GetString("Impressum_CommunityPrinciples")</h2>
                        <div style="background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%); padding: var(--space-24); border-radius: var(--radius-md); color: white;">
                            <p style="margin-bottom: var(--space-16); font-size: var(--font-size-18); font-weight: var(--font-weight-medium);">@LocalizationService.GetString("Impressum_CommunityText1")</p>
                            <p style="margin-bottom: var(--space-16);">@LocalizationService.GetString("Impressum_CommunityText2")</p>
                            <p style="opacity: 0.9;"><strong>@LocalizationService.GetString("Impressum_CommunityMotto")</strong> @LocalizationService.GetString("Impressum_CommunityMottoText")</p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

<!-- Quick Links -->
<section class="section" style="background-color: #f8fafc;">
    <div class="container">
        <div class="section-header">
            <h2 style="color: #1e40af;">@LocalizationService.GetString("Impressum_MoreInfo")</h2>
        </div>
        
        <div class="row">
            <div class="col-4">
                <div class="card" style="border-top: 4px solid #3b82f6;">
                    <div class="card-body">
                        <h3 class="card-title" style="color: #1e40af;">@LocalizationService.GetString("Impressum_Privacy")</h3>
                        <p class="card-text">@LocalizationService.GetString("Impressum_PrivacyDescription")</p>
                        <a href="/datenschutz" class="btn btn-outline" style="border-color: #3b82f6; color: #3b82f6;">@LocalizationService.GetString("Impressum_PrivacyButton")</a>
                    </div>
                </div>
            </div>
            
            <div class="col-4">
                <div class="card" style="border-top: 4px solid #3b82f6;">
                    <div class="card-body">
                        <h3 class="card-title" style="color: #1e40af;">@LocalizationService.GetString("Impressum_Terms")</h3>
                        <p class="card-text">@LocalizationService.GetString("Impressum_TermsDescription")</p>
                        <a href="/agb" class="btn btn-outline" style="border-color: #3b82f6; color: #3b82f6;">@LocalizationService.GetString("Impressum_TermsButton")</a>
                    </div>
                </div>
            </div>
            
            <div class="col-4">
                <div class="card" style="border-top: 4px solid #3b82f6;">
                    <div class="card-body">
                        <h3 class="card-title" style="color: #1e40af;">@LocalizationService.GetString("Impressum_ContactInfo")</h3>
                        <p class="card-text">@LocalizationService.GetString("Impressum_ContactDescription")</p>
                        <a href="/contact" class="btn btn-outline" style="border-color: #3b82f6; color: #3b82f6;">@LocalizationService.GetString("Impressum_ContactButton")</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>