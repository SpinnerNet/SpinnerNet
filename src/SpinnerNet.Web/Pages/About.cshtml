@page
@model SpinnerNet.Web.Pages.AboutModel
@{
    Layout = "Shared/_Layout";
}

<!-- Hero Section -->
<section class="hero" style="padding: var(--space-64) 0; background: linear-gradient(135deg, var(--color-primary) 0%, #3d6bb3 100%);">
    <div class="container">
        <div class="hero-content">
            <h1>@Model.GetText("About_Hero_Title")</h1>
            <p class="lead">@Model.GetText("About_Hero_Subtitle")</p>
            <p class="lead">@Model.GetText("About_Hero_Description")</p>
        </div>
    </div>
</section>

<!-- Vision & Mission Section -->
<section class="section">
    <div class="container">
        <div class="section-header">
            <h2>@Model.GetText("About_VisionMission_Title")</h2>
            <p class="lead">@Model.GetText("About_VisionMission_Subtitle")</p>
        </div>
        
        <div class="row">
            <div class="col-6">
                <div class="card">
                    <div class="card-img card-img-placeholder">
                        <div style="text-align: center; line-height: 1.4;">
                            <strong>@Model.GetText("About_Vision_Placeholder")</strong><br>
                            @Model.GetText("About_Vision_PlaceholderDesc")
                        </div>
                    </div>
                    <div class="card-body">
                        <h3 class="card-title">@Model.GetText("About_Vision_Title")</h3>
                        <p class="card-text">@Model.GetText("About_Vision_Text")</p>
                    </div>
                </div>
            </div>
            
            <div class="col-6">
                <div class="card">
                    <div class="card-img card-img-placeholder">
                        <div style="text-align: center; line-height: 1.4;">
                            <strong>@Model.GetText("About_Mission_Placeholder")</strong><br>
                            @Model.GetText("About_Mission_PlaceholderDesc")
                        </div>
                    </div>
                    <div class="card-body">
                        <h3 class="card-title">@Model.GetText("About_Mission_Title")</h3>
                        <p class="card-text">@Model.GetText("About_Mission_Text")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Three Pillars Section -->
<section class="section" style="background-color: var(--color-gray-50);">
    <div class="container">
        <div class="section-header">
            <h2>@Model.GetText("About_Pillars_Title")</h2>
            <p class="lead">@Model.GetText("About_Pillars_Subtitle")</p>
        </div>
        
        <div class="row">
            <div class="col-4">
                <div class="feature-item">
                    <div class="feature-icon" style="background: linear-gradient(135deg, #ff6b35 0%, #ff8e53 100%);">
                        <strong>S</strong>
                    </div>
                    <div class="feature-content">
                        <h3>@Model.GetText("About_Pillar_Spin_Title")</h3>
                        <p>@Model.GetText("About_Pillar_Spin_Text")</p>
                    </div>
                </div>
            </div>
            
            <div class="col-4">
                <div class="feature-item">
                    <div class="feature-icon" style="background: linear-gradient(135deg, var(--color-primary) 0%, #3d6bb3 100%);">
                        <strong>C</strong>
                    </div>
                    <div class="feature-content">
                        <h3>@Model.GetText("About_Pillar_Connect_Title")</h3>
                        <p>@Model.GetText("About_Pillar_Connect_Text")</p>
                    </div>
                </div>
            </div>
            
            <div class="col-4">
                <div class="feature-item">
                    <div class="feature-icon" style="background: linear-gradient(135deg, var(--color-success) 0%, #34ce57 100%);">
                        <strong>M</strong>
                    </div>
                    <div class="feature-content">
                        <h3>@Model.GetText("About_Pillar_Marketplace_Title")</h3>
                        <p>@Model.GetText("About_Pillar_Marketplace_Text")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Zeitsparkasse Section -->
<section class="section" id="zeitsparkasse">
    <div class="container">
        <div class="section-header">
            <h2>@Model.GetText("About_Zeitsparkasse_Title")</h2>
            <p class="lead">@Model.GetText("About_Zeitsparkasse_Subtitle")</p>
        </div>
        
        <div class="row">
            <div class="col-8">
                <h3>@Model.GetText("About_Zeitsparkasse_What_Title")</h3>
                <p class="lead">@Model.GetText("About_Zeitsparkasse_What_Text")</p>
                
                <h4 class="mt-4">@Model.GetText("About_Zeitsparkasse_How_Title")</h4>
                <ul class="text-large" style="line-height: var(--line-height-relaxed);">
                    <li>@Model.GetText("About_Zeitsparkasse_ZeitCoin")</li>
                    <li>@Model.GetText("About_Zeitsparkasse_TimeCredit")</li>
                    <li>@Model.GetText("About_Zeitsparkasse_AutoConvert")</li>
                    <li>@Model.GetText("About_Zeitsparkasse_Community")</li>
                </ul>
            </div>
            <div class="col-4">
                <div class="card">
                    <div class="card-img card-img-placeholder">
                        <div style="text-align: center; line-height: 1.4;">
                            <strong>@Model.GetText("About_Zeitsparkasse_App_Placeholder")</strong><br>
                            @Model.GetText("About_Zeitsparkasse_App_PlaceholderDesc")
                        </div>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">@Model.GetText("About_Zeitsparkasse_Card_Title")</h4>
                        <p class="card-text">@Model.GetText("About_Zeitsparkasse_Card_Text")</p>
                        <a href="/beta" class="btn btn-primary">@Model.GetText("About_Zeitsparkasse_BetaTest")</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

