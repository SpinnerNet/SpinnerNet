<!-- Values Section -->
<section class="section">
    <div class="container">
        <div class="section-header">
            <h2>@Model.GetText("About_Values_Title")</h2>
            <p class="lead">@Model.GetText("About_Values_Subtitle")</p>
        </div>
        
        <div class="row">
            <div class="col-3">
                <div class="text-center">
                    <div style="width: 80px; height: 80px; background: var(--color-primary); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto var(--space-24); color: white; font-size: var(--font-size-32); font-weight: var(--font-weight-bold);">⏰</div>
                    <h4>@Model.GetText("About_Values_Time_Title")</h4>
                    <p>@Model.GetText("About_Values_Time_Text")</p>
                </div>
            </div>
            <div class="col-3">
                <div class="text-center">
                    <div style="width: 80px; height: 80px; background: var(--color-accent); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto var(--space-24); color: white; font-size: var(--font-size-32); font-weight: var(--font-weight-bold);">🤝</div>
                    <h4>@Model.GetText("About_Values_Trust_Title")</h4>
                    <p>@Model.GetText("About_Values_Trust_Text")</p>
                </div>
            </div>
            <div class="col-3">
                <div class="text-center">
                    <div style="width: 80px; height: 80px; background: var(--color-success); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto var(--space-24); color: white; font-size: var(--font-size-32); font-weight: var(--font-weight-bold);">🌟</div>
