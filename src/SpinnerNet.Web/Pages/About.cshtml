                    <p>@Model.GetText("About_Values_Innovation_Text")</p>
                </div>
            </div>
            <div class="col-3">
                <div class="text-center">
                    <div style="width: 80px; height: 80px; background: var(--color-gray-600); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto var(--space-24); color: white; font-size: var(--font-size-32); font-weight: var(--font-weight-bold);">🏛️</div>
                    <h4>@Model.GetText("About_Values_Community_Title")</h4>
                    <p>@Model.GetText("About_Values_Community_Text")</p>
                </div>
            </div>
        </div>
    </div>
