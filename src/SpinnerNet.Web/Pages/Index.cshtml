@page
@model SpinnerNet.Web.Pages.IndexModel
@{
    Layout = "Shared/_Layout";
}

<!-- Hero Section - World Vision Layout -->
<section class="hero">
    <div class="container">
        <div class="hero-content">
            <h1>@Model.GetText("Index_Hero_Title")</h1>
            <p class="lead">@Model.GetText("Index_Hero_Slogan")</p>
            <p class="lead">@Model.GetText("Index_Hero_Description")</p>
            
            <div class="hero-actions">
                <a href="/about" class="btn btn-secondary btn-lg">@Model.GetText("Index_Hero_LearnMore")</a>
                <a href="/beta" class="btn btn-outline btn-lg">@Model.GetText("Index_Hero_BetaAccess")</a>
                <a href="/app" class="btn btn-primary btn-lg">@Model.GetText("Index_Hero_ToApp")</a>
            </div>
        </div>
    </div>
</section>

<!-- Statistics Section - World Vision Style -->
<section class="stats-section">
    <div class="container">
        <div class="row">
            <div class="col-3">
                <div class="stat-item">
                    <span class="stat-number">500+</span>
                    <span class="stat-label">@Model.GetText("Index_Stats_CommunityMembers")</span>
                </div>
            </div>
            <div class="col-3">
                <div class="stat-item">
                    <span class="stat-number">150+</span>
                    <span class="stat-label">@Model.GetText("Index_Stats_RealizedProjects")</span>
                </div>
            </div>
            <div class="col-3">
                <div class="stat-item">
                    <span class="stat-number">10,000+</span>
                    <span class="stat-label">@Model.GetText("Index_Stats_SavedHours")</span>
                </div>
            </div>
            <div class="col-3">
                <div class="stat-item">
                    <span class="stat-number">25+</span>
                    <span class="stat-label">@Model.GetText("Index_Stats_PartnerCompanies")</span>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Main Features Section - World Vision Container Structure -->
<section class="section">
    <div class="container">
        <div class="section-header">
            <h2>@Model.GetText("Index_Features_Title")</h2>
            <p class="lead">@Model.GetText("Index_Features_Description")</p>
        </div>
        
        <div class="row">
            <div class="col-4">
                <div class="card">
                    <div class="card-img card-img-placeholder">
                        <div style="text-align: center; line-height: 1.4;">
                            <strong>@Model.GetText("Index_Placeholder_Zeitsparkasse_Title")</strong><br>
                            @Model.GetText("Index_Placeholder_Zeitsparkasse_Description")
                        </div>
                    </div>
                    <div class="card-body">
                        <h3 class="card-title">@Model.GetText("Index_Features_Zeitsparkasse_Title")</h3>
                        <p class="card-text">@Model.GetText("Index_Features_Zeitsparkasse_Description")</p>
                        <div class="mt-4">
                            <a href="/about#zeitsparkasse" class="btn btn-primary">@Model.GetText("Index_CTA_LearnMore")</a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-4">
                <div class="card">
                    <div class="card-img card-img-placeholder">
                        <div style="text-align: center; line-height: 1.4;">
                            <strong>@Model.GetText("Index_Placeholder_Innovation_Title")</strong><br>
                            @Model.GetText("Index_Placeholder_Innovation_Description")
                        </div>
                    </div>
                    <div class="card-body">
                        <h3 class="card-title">@Model.GetText("Index_Features_Innovation_Title")</h3>
                        <p class="card-text">@Model.GetText("Index_Features_Innovation_Description")</p>
                        <div class="mt-4">
                            <a href="/about#innovation" class="btn btn-primary">@Model.GetText("Index_CTA_BookWorkshop")</a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-4">
                <div class="card">
                    <div class="card-img card-img-placeholder">
                        <div style="text-align: center; line-height: 1.4;">
                            <strong>@Model.GetText("Index_Placeholder_Community_Title")</strong><br>
                            @Model.GetText("Index_Placeholder_Community_Description")
                        </div>
                    </div>
                    <div class="card-body">
                        <h3 class="card-title">@Model.GetText("Index_Features_Community_Title")</h3>
                        <p class="card-text">@Model.GetText("Index_Features_Community_Description")</p>
                        <div class="mt-4">
                            <a href="/about#community" class="btn btn-primary">@Model.GetText("Index_CTA_JoinCommunity")</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

