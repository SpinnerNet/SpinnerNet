<!-- Call to Action Section - World Vision Hero Style -->
<section class="section" style="background: linear-gradient(135deg, var(--color-primary) 0%, #3d6bb3 100%); color: white;">
    <div class="container">
        <div class="row">
            <div class="col-8">
                <h2 style="color: white; margin-bottom: var(--space-24);">@Model.GetText("Index_CTA_Title")</h2>
                <p class="lead" style="color: rgba(255,255,255,0.9); margin-bottom: var(--space-32);">
                    @Model.GetText("Index_CTA_Description")
                </p>
                <div style="display: flex; gap: var(--space-16); flex-wrap: wrap;">
                    <a href="/beta" class="btn btn-secondary btn-lg">@Model.GetText("Index_CTA_SecureBeta")</a>
                    <a href="/contact" class="btn btn-outline btn-lg" style="border-color: white; color: white;">@Model.GetText("Index_CTA_BookConsultation")</a>
                </div>
            </div>
            <div class="col-4">
                <div style="text-align: center;">
                    <div class="card-img card-img-placeholder" style="background-color: rgba(255,255,255,0.1); border: 2px dashed rgba(255,255,255,0.3); height: 280px;">
                        <div style="color: rgba(255,255,255,0.8); text-align: center; line-height: 1.4;">
                            <strong>@Model.GetText("Index_Placeholder_Logo_Title")</strong><br>
                            @Model.GetText("Index_Placeholder_Logo_Description")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

