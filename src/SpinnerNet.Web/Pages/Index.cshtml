<!-- Newsletter Section - World Vision Style -->
<section class="section-sm" style="background-color: var(--color-gray-50);">
    <div class="container">
        <div class="row" style="align-items: center;">
            <div class="col-8">
                <h3>@Model.GetText("Index_Newsletter_Title")</h3>
                <p class="lead mb-0">@Model.GetText("Index_Newsletter_Description")</p>
            </div>
            <div class="col-4">
                <div style="display: flex; gap: var(--space-8); align-items: stretch;">
                    <input type="email" 
                           placeholder="@Model.GetText("Index_Newsletter_Placeholder")" 
                           style="flex: 1; 
                                  padding: var(--space-12); 
                                  border: 1px solid var(--color-gray-300); 
                                  border-radius: var(--radius-md);
                                  font-size: var(--font-size-16);" />
                    <button class="btn btn-primary">@Model.GetText("Index_Newsletter_Subscribe")</button>
