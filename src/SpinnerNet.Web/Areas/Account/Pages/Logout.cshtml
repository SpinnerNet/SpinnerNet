@page "/Account/Logout"
@model SpinnerNet.Web.Areas.Account.Pages.LogoutModel
@{
    ViewData["Title"] = "Logout - Spinner.Net";
}

<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <base href="~/" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
    <link href="css/app.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="favicon.png"/>
</head>

<body style="margin: 0; font-family: 'Roboto', sans-serif; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 100vh; display: flex; align-items: center; justify-content: center;">
    
    <div style="background: white; border-radius: 16px; box-shadow: 0 20px 40px rgba(0,0,0,0.1); padding: 48px; max-width: 400px; width: 100%; margin: 20px; text-align: center;">
        
        <!-- Header -->
        <div style="margin-bottom: 32px;">
            <div style="display: flex; align-items: center; justify-content: center; margin-bottom: 16px;">
                <img src="images/bamberger-spinnerei-heart-logo.svg" alt="Bamberger Spinnerei" style="height: 48px; margin-right: 12px;" />
            </div>
            <h1 style="margin: 0; font-size: 28px; font-weight: 300; color: #1976d2; margin-bottom: 8px;">Signed Out</h1>
            <p style="margin: 0; color: #666; font-size: 16px;">You have been successfully signed out of Spinner.Net.</p>
        </div>
        
        <a href="/" 
           style="display: inline-block; background: #1976d2; color: white; text-decoration: none; padding: 16px 32px; border-radius: 8px; font-size: 16px; font-weight: 500; transition: background-color 0.3s;"
           onmouseover="this.style.backgroundColor='#1565c0'"
           onmouseout="this.style.backgroundColor='#1976d2'">
            Return to Home
        </a>
    </div>

    <script src="_content/MudBlazor/MudBlazor.min.js"></script>
</body>
</html>