@using SpinnerNet.Shared.Localization
@inject ILocalizationService LocalizationService

<div class="spider-loading-container">
    <div class="web-background">
        <!-- Animated web strands -->
        <div class="web-strand strand-1"></div>
        <div class="web-strand strand-2"></div>
        <div class="web-strand strand-3"></div>
        <div class="web-strand strand-4"></div>
        <div class="web-strand strand-5"></div>
        <div class="web-strand strand-6"></div>
    </div>
    
    <!-- Spider -->
    <div class="spider">
        <div class="spider-body">
            <div class="spider-head"></div>
            <div class="spider-abdomen"></div>
        </div>
        <div class="spider-legs">
            <div class="leg leg-1"></div>
            <div class="leg leg-2"></div>
            <div class="leg leg-3"></div>
            <div class="leg leg-4"></div>
            <div class="leg leg-5"></div>
            <div class="leg leg-6"></div>
            <div class="leg leg-7"></div>
            <div class="leg leg-8"></div>
        </div>
    </div>
    
    <!-- Loading text -->
    <div class="loading-text">
        <h1 class="spinner-title">Spinner.Net</h1>
        <p class="loading-message">@LocalizationService.GetString("Loading_Message")</p>
        <div class="loading-dots">
            <span></span>
            <span></span>
            <span></span>
        </div>
    </div>
</div>

<style>
    .spider-loading-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 50%, #93c5fd 100%);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        z-index: 9999;
    }

    .web-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
    }

    .web-strand {
        position: absolute;
        background: rgba(59, 130, 246, 0.3);
        transform-origin: center;
        animation: web-appear 3s ease-out;
    }

    .strand-1 {
        width: 2px;
        height: 300px;
        top: 20%;
        left: 50%;
        transform: translateX(-50%) rotate(0deg);
        animation-delay: 3.2s;
    }

    .strand-2 {
        width: 2px;
        height: 250px;
        top: 25%;
        left: 50%;
        transform: translateX(-50%) rotate(45deg);
        animation-delay: 3.4s;
    }

    .strand-3 {
        width: 2px;
        height: 200px;
        top: 30%;
        left: 50%;
        transform: translateX(-50%) rotate(90deg);
        animation-delay: 3.6s;
    }

    .strand-4 {
        width: 2px;
        height: 250px;
        top: 25%;
        left: 50%;
        transform: translateX(-50%) rotate(135deg);
        animation-delay: 3.8s;
    }

    .strand-5 {
        width: 150px;
        height: 2px;
        top: 40%;
        left: 50%;
        transform: translateX(-50%);
        animation-delay: 4s;
    }

    .strand-6 {
        width: 120px;
        height: 2px;
        top: 50%;
        left: 50%;
        transform: translateX(-50%);
        animation-delay: 4.2s;
    }

    .spider {
        position: relative;
        width: 60px;
        height: 40px;
        margin-bottom: 3rem;
        animation: spider-move 4s ease-in-out infinite, spider-appear 1.5s ease-out;
        animation-delay: 3s, 4.4s;
    }

    .spider-body {
        position: relative;
        width: 100%;
        height: 100%;
    }

    .spider-head {
        position: absolute;
        width: 20px;
        height: 16px;
        background: #1e40af;
        border-radius: 50%;
        top: 2px;
        left: 50%;
        transform: translateX(-50%);
        box-shadow: 0 2px 8px rgba(30, 64, 175, 0.4);
    }

    .spider-head::before,
    .spider-head::after {
        content: '';
        position: absolute;
        width: 3px;
        height: 3px;
        background: #ffffff;
        border-radius: 50%;
        top: 4px;
    }

    .spider-head::before {
        left: 5px;
    }

    .spider-head::after {
        right: 5px;
    }

    .spider-abdomen {
        position: absolute;
        width: 32px;
        height: 24px;
        background: #2563eb;
        border-radius: 50%;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        box-shadow: 0 3px 12px rgba(37, 99, 235, 0.5);
    }

    .spider-legs {
        position: absolute;
        width: 100%;
        height: 100%;
    }

    .leg {
        position: absolute;
        width: 25px;
        height: 2px;
        background: #1e40af;
        border-radius: 1px;
        transform-origin: 20% 50%;
        animation: leg-move 2s ease-in-out infinite;
    }

    .leg-1 {
        top: 8px;
        left: -15px;
        transform: rotate(-30deg);
        animation-delay: 0s;
    }

    .leg-2 {
        top: 15px;
        left: -15px;
        transform: rotate(-15deg);
        animation-delay: 0.1s;
    }

    .leg-3 {
        top: 22px;
        left: -15px;
        transform: rotate(15deg);
        animation-delay: 0.2s;
    }

    .leg-4 {
        top: 28px;
        left: -15px;
        transform: rotate(30deg);
        animation-delay: 0.3s;
    }

    .leg-5 {
        top: 8px;
        right: -15px;
        transform: rotate(30deg) scaleX(-1);
        animation-delay: 0.4s;
    }

    .leg-6 {
        top: 15px;
        right: -15px;
        transform: rotate(15deg) scaleX(-1);
        animation-delay: 0.5s;
    }

    .leg-7 {
        top: 22px;
        right: -15px;
        transform: rotate(-15deg) scaleX(-1);
        animation-delay: 0.6s;
    }

    .leg-8 {
        top: 28px;
        right: -15px;
        transform: rotate(-30deg) scaleX(-1);
        animation-delay: 0.7s;
    }

    .loading-text {
        text-align: center;
        z-index: 10;
        opacity: 0;
        animation: text-appear 1s ease-out 3s forwards, text-stay 1s ease-out 4s forwards;
    }

    .spinner-title {
        font-size: 3rem;
        font-weight: 700;
        color: #1e40af;
        margin-bottom: 1rem;
        text-shadow: 0 2px 4px rgba(30, 64, 175, 0.3);
        animation: title-glow 3s ease-in-out infinite;
        animation-delay: 3s;
    }

    .loading-message {
        font-size: 1.2rem;
        color: #1e40af;
        margin-bottom: 2rem;
        opacity: 0.8;
    }

    .loading-dots {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
    }

    .loading-dots span {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background-color: #2563eb;
        animation: dots-bounce 1.4s ease-in-out infinite both;
    }

    .loading-dots span:nth-child(1) { animation-delay: 2.68s; }
    .loading-dots span:nth-child(2) { animation-delay: 2.84s; }
    .loading-dots span:nth-child(3) { animation-delay: 3s; }

    @@keyframes web-appear {
        0% { 
            opacity: 0;
            transform: translateX(-50%) scale(0);
        }
        100% { 
            opacity: 1;
            transform: translateX(-50%) scale(1);
        }
    }

    @@keyframes spider-appear {
        0% { 
            opacity: 0;
            transform: translateY(-20px) scale(0.5);
        }
        100% { 
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    @@keyframes spider-move {
        0%, 100% { 
            transform: translateY(0) rotate(0deg);
        }
        25% { 
            transform: translateY(-10px) rotate(2deg);
        }
        50% { 
            transform: translateY(5px) rotate(-1deg);
        }
        75% { 
            transform: translateY(-5px) rotate(1deg);
        }
    }

    @@keyframes leg-move {
        0%, 100% { 
            transform: rotate(var(--rotation, 0deg)) scaleX(var(--scale, 1));
        }
        50% { 
            transform: rotate(calc(var(--rotation, 0deg) + 5deg)) scaleX(var(--scale, 1));
        }
    }

    @@keyframes title-glow {
        0%, 100% { 
            text-shadow: 0 2px 4px rgba(30, 64, 175, 0.3);
        }
        50% { 
            text-shadow: 0 2px 20px rgba(30, 64, 175, 0.6);
        }
    }

    @@keyframes dots-bounce {
        0%, 80%, 100% { 
            transform: scale(0.8);
            opacity: 0.5;
        }
        40% { 
            transform: scale(1.2);
            opacity: 1;
        }
    }

    @@keyframes text-appear {
        0% { 
            opacity: 0;
            transform: translateY(20px);
        }
        100% { 
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes text-stay {
        0%, 100% { 
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 480px) {
        .spinner-title {
            font-size: 2rem;
        }
        
        .spider {
            width: 45px;
            height: 30px;
        }
        
        .leg {
            width: 20px;
        }
    }
</style>