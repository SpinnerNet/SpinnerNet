@page "/test"

<PageTitle>Test - MudBlazor</PageTitle>

<MudText Typo="Typo.h3" Class="mb-4">MudBlazor Test Page</MudText>

<MudGrid>
    <MudItem xs="12" md="6">
        <MudCard Elevation="3">
            <MudCardContent>
                <MudText Typo="Typo.h5" Class="mb-3">Buttons</MudText>
                <MudButton Color="Color.Primary" Variant="Variant.Filled" Class="mr-2" OnClick="IncrementCounter">
                    Click me! (@counter)
                </MudButton>
                <MudButton Color="Color.Secondary" Variant="Variant.Outlined" Class="mr-2">
                    Outlined
                </MudButton>
                <MudButton Color="Color.Success" Variant="Variant.Text">
                    Text
                </MudButton>
            </MudCardContent>
        </MudCard>
    </MudItem>
    
    <MudItem xs="12" md="6">
        <MudCard Elevation="3">
            <MudCardContent>
                <MudText Typo="Typo.h5" Class="mb-3">Form Controls</MudText>
                <MudTextField @bind-Value="textValue" Label="Text Input" Variant="Variant.Outlined" Class="mb-3" />
                <MudSelect @bind-Value="selectedValue" Label="Select Option" Variant="Variant.Outlined" Class="mb-3">
                    <MudSelectItem Value="@("Option 1")">Option 1</MudSelectItem>
                    <MudSelectItem Value="@("Option 2")">Option 2</MudSelectItem>
                    <MudSelectItem Value="@("Option 3")">Option 3</MudSelectItem>
                </MudSelect>
                <MudCheckBox @bind-Value="checkValue" Label="Check me!" />
                <MudText Typo="Typo.body2" Class="mt-2">Checkbox value: @checkValue</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    
    <MudItem xs="12">
        <MudCard Elevation="3">
            <MudCardContent>
                <MudText Typo="Typo.h5" Class="mb-3">Alerts & Snackbars</MudText>
                <MudAlert Severity="Severity.Success" Class="mb-3">
                    âœ… If you can see this styled alert, MudBlazor is working perfectly!
                </MudAlert>
                <MudButton Color="Color.Info" Variant="Variant.Filled" OnClick="ShowSnackbar">
                    Show Snackbar
                </MudButton>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>

@code {
    private int counter = 0;
    private string textValue = "Hello MudBlazor!";
    private string selectedValue = "Option 1";
    private bool checkValue = true;
    
    [Inject] ISnackbar Snackbar { get; set; } = default!;
    
    private void IncrementCounter()
    {
        counter++;
    }
    
    private void ShowSnackbar()
    {
        Snackbar.Add("ðŸŽ‰ MudBlazor Snackbar is working!", Severity.Success);
    }
}