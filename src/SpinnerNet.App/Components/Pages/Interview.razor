            gap: 0.5rem;
        }

        .step-dot {
            width: 40px;
            height: 40px;
            font-size: 1rem;
        }
    }
</style>

@code {
    private int _currentStep = 1;
    private int _totalSteps = 4;
    private string _userName = "";
    private string _selectedPersonality = "";
    private string _selectedUse = "";
    private bool _isAuthenticated = false;
    private string _userId = "";

    protected override async Task OnInitializedAsync()
    {
        Logger.LogInformation("üöÄ Interview page initializing...");
        Logger.LogInformation("üìç Current URL: {Url}", Navigation.Uri);
        
        // Check authentication immediately
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        _isAuthenticated = authState.User.Identity?.IsAuthenticated ?? false;
        
        Logger.LogInformation("üîê User authenticated on interview page: {IsAuthenticated}", _isAuthenticated);
        
        if (_isAuthenticated)
        {
            _userId = authState.User.FindFirst("oid")?.Value ?? 
                     authState.User.FindFirst("sub")?.Value ?? 
                     authState.User.FindFirst("http://schemas.xmlsoap.org/ws/2005/05/identity/claims/nameidentifier")?.Value ?? "";
                     
            Logger.LogInformation("üë§ User ID: {UserId}", _userId);
            
            // Log all claims for debugging
            var claims = authState.User.Claims.Select(c => $"{c.Type}={c.Value}").ToList();
            Logger.LogInformation("üìã User claims: {@Claims}", claims);
            
            // Check if user already has a persona - if so, they shouldn't be here
            try
            {
                var personaQuery = new CheckUserHasPersona.Command { UserId = _userId };
                var personaResult = await Mediator.Send(personaQuery);
                
                if (personaResult.Success && personaResult.HasPersona)
                {
                    Logger.LogWarning("‚ö†Ô∏è User already has persona but landed on interview page, redirecting to home");
                    Navigation.NavigateTo("/", forceLoad: true);
                    return;
                }
                else
                {
                    Logger.LogInformation("‚úÖ User has no persona, interview flow is appropriate");
                }
            }
            catch (Exception ex)
            {
                Logger.LogError(ex, "‚ùå Error checking existing persona on interview page");
            }
        }
        else
        {
            Logger.LogWarning("‚ö†Ô∏è User not authenticated on interview page, redirecting to home");
            Navigation.NavigateTo("/", forceLoad: true);
            return;
        }
    }


    private bool CanProceed()
    {
        return _currentStep switch
        {
            1 => !string.IsNullOrWhiteSpace(_userName),
            2 => !string.IsNullOrEmpty(_selectedPersonality),
            3 => !string.IsNullOrEmpty(_selectedUse),
            4 => true,
            _ => false
        };
    }

    private void NextStep()
    {
        if (CanProceed() && _currentStep < _totalSteps)
        {
            _currentStep++;
            StateHasChanged();
        }
    }

    private void PreviousStep()
    {
        if (_currentStep > 1)
        {
            _currentStep--;
            StateHasChanged();
        }
    }

    private void SelectPersonality(string personality)
    {
        _selectedPersonality = personality;
        StateHasChanged();
    }

    private void SelectUse(string use)
    {
        _selectedUse = use;
        StateHasChanged();
    }

    private async Task OnEnterPressed(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && CanProceed())
        {
            NextStep();
        }
    }

    private async Task CompleteInterview()
    {
        Logger.LogInformation("üî¥ CompleteInterview button clicked!");
        
        try
        {
            Logger.LogInformation("üéØ Starting interview completion...");
            
            // Get the current authenticated user
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            Logger.LogInformation("üîê User authenticated: {IsAuthenticated}", authState.User.Identity?.IsAuthenticated);
            
            if (authState.User.Identity?.IsAuthenticated != true)
            {
                Logger.LogWarning("‚ùå User not authenticated, redirecting to home");
                await JSRuntime.InvokeVoidAsync("console.error", "User not authenticated during interview completion");
                Navigation.NavigateTo("/", forceLoad: true);
                return;
            }
            
            // Get user ID from claims with detailed logging
            var oidClaim = authState.User.FindFirst("oid")?.Value;
            var subClaim = authState.User.FindFirst("sub")?.Value;
            var nameIdentifierClaim = authState.User.FindFirst("http://schemas.xmlsoap.org/ws/2005/05/identity/claims/nameidentifier")?.Value;
            
            Logger.LogInformation("üÜî Claim values - oid: '{OidClaim}', sub: '{SubClaim}', nameidentifier: '{NameIdentifierClaim}'", 
                oidClaim, subClaim, nameIdentifierClaim);
            
            var userId = oidClaim ?? subClaim ?? nameIdentifierClaim;
            Logger.LogInformation("üÜî Selected UserId for interview completion: '{UserId}'", userId);
            
            // Log all available claims for debugging
            var claims = authState.User.Claims.Select(c => $"{c.Type}={c.Value}").ToList();
            Logger.LogInformation("üìã Available claims: {@Claims}", claims);
                        
            Logger.LogInformation("üìù Interview completion data - UserId: {UserId}, UserName: {UserName}, Personality: {Personality}, Use: {Use}", 
                userId, _userName, _selectedPersonality, _selectedUse);
                        
            if (string.IsNullOrEmpty(userId))
            {
                Logger.LogError("‚ùå No user ID found in claims");
                Navigation.NavigateTo("/", forceLoad: true);
                return;
            }
            
            // Create command to save persona
            // COMMENTED OUT FOR SPRINT 1 - CompleteBasicPersonaInterview not implemented yet
            // var command = new CompleteBasicPersonaInterview.Command { ... };
            
            Logger.LogInformation("üì§ Sending persona creation command via MediatR...");
            
            // Send command via MediatR
            // var result = await Mediator.Send(command);
            // For Sprint 1, just mark as complete
            var result = new { Success = true, PersonaId = Guid.NewGuid().ToString() };
            
            Logger.LogInformation("‚úÖ Persona creation result - Success: {Success}, PersonaId: {PersonaId}", result.Success, result.PersonaId);
            if (!result.Success)
            {
                Logger.LogError("‚ùå Persona creation failed with error: {Error}", "Sprint 1 - simplified result");
            }
            
            if (result.Success)
            {
                Logger.LogInformation("üè† Persona created successfully with ID: {PersonaId}, verifying creation...", result.PersonaId);
                
                // Verify persona was actually created by checking for it
                var maxRetries = 5;
                var retryDelay = 1000; // 1 second
                bool personaVerified = false;
                
                for (int attempt = 1; attempt <= maxRetries; attempt++)
                {
                    Logger.LogInformation("üîç Verification attempt {Attempt}/{MaxRetries}", attempt, maxRetries);
                    
                    try
                    {
                        var verifyQuery = new CheckUserHasPersona.Command { UserId = userId };
                        var verifyResult = await Mediator.Send(verifyQuery);
                        
                        Logger.LogInformation("üìã Verification result - Success: {Success}, HasPersona: {HasPersona}", 
                            verifyResult.Success, verifyResult.HasPersona);
                            
                        if (verifyResult.Success && verifyResult.HasPersona)
                        {
                            Logger.LogInformation("‚úÖ Persona verified successfully on attempt {Attempt}", attempt);
                            personaVerified = true;
                            break;
                        }
                        else
                        {
                            Logger.LogWarning("‚ö†Ô∏è Persona not found on attempt {Attempt}, retrying...", attempt);
                        }
                    }
                    catch (Exception verifyEx)
                    {
                        Logger.LogError(verifyEx, "‚ùå Error verifying persona on attempt {Attempt}", attempt);
                    }
                    
                    if (attempt < maxRetries)
                    {
                        await Task.Delay(retryDelay);
                        retryDelay *= 2; // Exponential backoff
                    }
                }
                
                if (personaVerified)
                {
                    Logger.LogInformation("üéâ Persona verified, adding delay before navigation to ensure consistency");
                    // Add small delay to ensure Cosmos DB consistency before navigation
                    await Task.Delay(2000);
                    Logger.LogInformation("üè† Navigating to dashboard after persona creation");
                    Navigation.NavigateTo("/dashboard", forceLoad: true);
                }
                else
                {
                    Logger.LogError("‚ùå Failed to verify persona after {MaxRetries} attempts", maxRetries);
                    // Still redirect to dashboard as persona was created successfully
                    Logger.LogInformation("üè† Navigating to dashboard despite verification issues");
                    Navigation.NavigateTo("/dashboard", forceLoad: true);
                }
            }
            else
            {
                Logger.LogError("‚ùå Error creating persona: {Error}", "Sprint 1 - simplified result");
                // Show error to user instead of just navigating
                // TODO: Add proper error UI
                Navigation.NavigateTo("/dashboard", forceLoad: true);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "üí• Exception completing interview");
            // Show error to user instead of just navigating
            // TODO: Add proper error UI
            Navigation.NavigateTo("/dashboard", forceLoad: true);
        }
    }

    private string GetPersonalityText(string personality)
    {
        return personality switch
